// Memoization
class Solution {
public:
    int len;
    vector<vector<int>> dp;
    int fun(int i,int prev_ind,vector<int>& nums){
        if(i==len) return 0;
        if(dp[i][prev_ind]!=-1) return dp[i][prev_ind];
        int not_take=fun(i+1,prev_ind,nums);
        int take=0;
        if(prev_ind==len || nums[i]>nums[prev_ind]){
            take=1+fun(i+1,i,nums);
        }
        return dp[i][prev_ind]=max(take,not_take);
    }
    int lengthOfLIS(vector<int>& nums) {
        int n=nums.size();
        dp.assign(n+1,vector<int>(n+1,-1));
        len=n;
        return fun(0,n,nums);
        
    }
};

// Tabular Approach
class Solution {
public:
    int lengthOfLIS(vector<int>& nums) {
        int n = nums.size();
        vector<vector<int>> dp(n + 1, vector<int>(n + 1, 0));

        for (int i = n - 1; i >= 0; i--) {
            for (int prev = i - 1; prev >= -1; prev--) {
                int not_take = dp[i + 1][prev + 1];
                int take = 0;
                if (prev == -1 || nums[i] > nums[prev]) {
                    take = 1 + dp[i + 1][i + 1];
                }
                dp[i][prev + 1] = max(take, not_take);
            }
        }
        return dp[0][0];
    }
};

Tabular dp[n] Approach
class Solution {
public:
  
    int lengthOfLIS(vector<int>& nums) {
        int n=nums.size();
        vector<int> dp(n,1);
        for(int i=1;i<n;i++){
            for(int j=0;j<i;j++){
                if(nums[i]>nums[j]){
                    dp[i]=max(dp[i],dp[j]+1);
                }
            }
        }
        int maxi=INT_MIN;
        for(int i=0;i<n;i++){
            maxi=max(maxi,dp[i]);
        }
        return maxi;
        
        
    }
};


