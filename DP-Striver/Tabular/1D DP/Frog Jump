class Solution {
  public:
    
    int minCost(vector<int>& ht) {
        // Code here
        vector<int> dp;
        int n=ht.size();
        dp.assign(n+1,-1);
        //Initialization
        dp[0]=0;
        dp[1]=abs(ht[0]-ht[1]);
        for(int i=2;i<n;i++){
            dp[i]=min(dp[i-1]+abs(ht[i-1]-ht[i]),dp[i-2]+abs(ht[i-2]-ht[i]));
        }
        return dp[n-1];
        
        
    }
};


