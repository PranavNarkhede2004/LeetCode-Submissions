class Solution {
public:
    int n;
    vector<vector<int>> dp;

    int minimumTotal(vector<vector<int>>& t) {
        n = t.size();
        dp.assign(n, vector<int>(n, 1e9));  // initialize with large value

        dp[0][0] = t[0][0];

        for (int i = 1; i < n; i++) {
            for (int j = 0; j <= i; j++) {
                if (j < i) { 
                    dp[i][j] = min(dp[i][j], dp[i-1][j] + t[i][j]);
                }
                if (j > 0) { 
                    dp[i][j] = min(dp[i][j], dp[i-1][j-1] + t[i][j]);
                }
            }
        }

        // take min in the last row
        int ans = INT_MAX;
        for (int j = 0; j < n; j++) {
            ans = min(ans, dp[n-1][j]);
        }
        return ans;
    }
};
