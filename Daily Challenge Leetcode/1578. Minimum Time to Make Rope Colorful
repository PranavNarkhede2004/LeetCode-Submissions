class Solution {
public:
    int minCost(string colors, vector<int>& A) {
        int n=A.size();
        int ans=0;
        for(int i=1;i<n;i++){
            if(colors[i]==colors[i-1]){
                if(A[i]>A[i-1]){
                    //A[i-1] remove karo
                    ans+=A[i-1];
                }else{
                    //A[i] Remove karo 
                    ans+=A[i];
                    A[i]=A[i-1];
                } 
            }
        }
        return ans;
    }
};