class Solution {
public:
    int maximumEnergy(vector<int>& energy, int k) {
        int n=energy.size();
        vector<int> ans(n+1,0);
        for (int i = n - 1; i >= 0; i--) {
            ans[i] = energy[i];
            if (i + k < n)
                ans[i] += ans[i + k];
        }
        int maxi=INT_MIN;
        for(int i=0;i<n;i++){
            maxi=max(maxi,ans[i]);
        }
        return maxi;
    }
};