class Solution {
public:
    int numEnclaves(vector<vector<int>>& grid) {
        int n=grid.size();
        int m=grid[0].size();
        vector<vector<int>> vis(n,vector<int>(m,0));
        queue<pair<int,int>> q;
        int cnt=0,cnt1s=0,vis_cnt=0;
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(grid[i][j]==1){
                    cnt1s++;
                }
                if((i==0 || i==n-1 || j==0 || j==m-1) && grid[i][j]==1){
                    q.push({i,j});
                    vis[i][j]=1;
                    vis_cnt++;
                }
            }
        }
        int delrow[]={-1,0,+1,0};
        int delcol[]={0,+1,0,-1};
        while(!q.empty()){
            int r=q.front().first;
            int c=q.front().second;
            q.pop();

            for(int i=0;i<4;i++){
                int nr=r+delrow[i];
                int nc=c+delcol[i];

                if(nr>=0 && nr<=n-1 &&
                   nc>=0 && nc<=m-1 &&
                   vis[nr][nc]==0 &&
                   grid[nr][nc]==1
                   ){
                    vis[nr][nc]=1;
                    q.push({nr,nc});
                    vis_cnt++;

                   }
            }
        }
        return cnt1s-vis_cnt;
    }
};