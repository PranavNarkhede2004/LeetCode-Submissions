class Solution {
public:
    vector<vector<int>> floodFill(vector<vector<int>>& grid, int sr, int sc, int color) {
        int n=grid.size();
        int m=grid[0].size();
        queue<pair<int,int>> q;
        q.push({sr,sc});
        vector<vector<int>> Visited(n,vector<int>(m,0));
        int origColor = grid[sr][sc];
        if (origColor == color) return grid;
        int delR[]={-1,0,+1,0};
        int delC[]={0,+1,0,-1};
         grid[sr][sc]=color;
        while(!q.empty()){
            int r=q.front().first;
            int c=q.front().second;
            q.pop();

            for(int i=0;i<4;i++){
                int nr=r+delR[i];
                int nc=c+delC[i];

                if(nr>=0 && nr<n && nc>=0 && nc<m && 
                   !Visited[nr][nc] && 
                    grid[nr][nc]==origColor){
                    Visited[nr][nc]=1;
                    grid[nr][nc]=color;
                    q.push({nr,nc});
                }
            }
        }
        return grid;
    }
};