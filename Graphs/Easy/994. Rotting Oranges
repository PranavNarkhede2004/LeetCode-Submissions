class Solution {
public:
    int orangesRotting(vector<vector<int>>& grid) {
        int m=grid.size();
        int n=grid[0].size();
        vector<vector<int>> Visited(m,vector<int>(n,0));
        queue<pair<pair<int,int>, int>> q;
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(grid[i][j]==2){
                    q.push({{i,j},0});
                    Visited[i][j]=2;
                }
            }
        }
        int tm=0;
        int delrow[]={-1,0,+1,0};
        int delcol[]={0,+1,0,-1};
        while(!q.empty()){
            int r=q.front().first.first;
            int c=q.front().first.second;
            int t=q.front().second;
            tm=max(tm,t);
            q.pop();
            for(int i=0;i<4;i++){
                int newR=r+delrow[i];
                int newC=c+delcol[i];
                if(newR>=0 && newR<m &&
                   newC>=0 && newC<n &&
                   grid[newR][newC]==1 && Visited[newR][newC]!=2){
                    q.push({{newR,newC},t+1});
                    Visited[newR][newC]=2;
                   }
            }
        }
        for(int i=0;i<m;i++){
            for(int j=0;j<n;j++){
                if(Visited[i][j]!=2 && grid[i][j]==1){
                    return -1;
                }
            }
        }
        return tm;
    }
};