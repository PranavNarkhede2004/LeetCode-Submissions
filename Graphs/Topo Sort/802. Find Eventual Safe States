class Solution {
public:
    vector<int> eventualSafeNodes(vector<vector<int>>& edges) {
        int V=edges.size();
        vector<int> indegree(V,0);
        vector<vector<int>> adj;
        adj.resize(V);
        int n=edges.size();
        
        for(int i=0;i<V;i++){
           int m=edges[i].size();
           for(int j=0;j<m;j++){
            adj[edges[i][j]].push_back(i);
           }
        }
        for(int i=0;i<V;i++){
            int m=adj[i].size();
            for(int j=0;j<m;j++){
                int nei=adj[i][j];
                indegree[nei]++;
            }
        }
        queue<int> q;
        vector<int> ans;
        for(int i=0;i<V;i++){
            if(indegree[i]==0){
                q.push(i);
            }
        }
        while(!q.empty()){
            int node=q.front();
            q.pop();
            ans.push_back(node);
            int m=adj[node].size();
            for(int i=0;i<m;i++){
                int nei=adj[node][i];
                indegree[nei]--;
                if(indegree[nei]==0){
                    q.push(nei);
                }
            }
        }
        sort(ans.begin(),ans.end());
        return ans;
    }
};