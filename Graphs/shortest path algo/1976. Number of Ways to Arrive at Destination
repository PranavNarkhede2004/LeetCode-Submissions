class Solution {
public:
    int countPaths(int n, vector<vector<int>>& times) {
        int modulo=1e9+7;
        long long ans;
        vector<vector<pair<long long,long long>>> adj;
        adj.resize(n+1);
        for(int i=0;i<times.size();i++){
            int u=times[i][0];
            int v=times[i][1];
            int time=times[i][2];
            adj[u].push_back({v,time});
            adj[v].push_back({u,time});
        }
        const long long INF=1e18;
        vector<long long> dist(n,INF);
        vector<long long> ways(n,0);
        priority_queue<pair<long long,long long>, 
               vector<pair<long long,long long>>, 
               greater<pair<long long,long long>>> pq;

        // pq=>{cost,node}
        pq.push({0,0});
        dist[0]=0;
        ways[0]=1;
        while(!pq.empty()){
            auto it=pq.top();
            long long cost=it.first;
            long long node=it.second;
            pq.pop();
            if(cost>dist[node]) continue;
            for(auto it1:adj[node]){
                long long nei=it1.first;
                long long uvcost=it1.second;
                long long newcost=uvcost+cost;
                

                if(newcost<dist[nei]){
                    dist[nei]=newcost;
                    ways[nei]=ways[node];
                    pq.push({newcost,nei});
                }else if(newcost==dist[nei]){
                    ways[nei]=(ways[nei]+ways[node])%modulo;
                }
            }
        }
        
        return (int)ways[n-1]%modulo;
    }
};