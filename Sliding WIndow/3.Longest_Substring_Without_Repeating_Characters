class Solution {
public:
    int lengthOfLongestSubstring(string s) {
       vector<int> hash(256,-1);
        int n=s.length();
        int l=0,r=0;
        int len=0;
        while(r<n){
            if(hash[s[r]]!=-1){
                if(hash[s[r]]>=l){
                    l=hash[s[r]]+1;
                }
                
               
            }
            hash[s[r]]=r;
             len=max(len,r-l+1);
            r++;
        }
        return len;
    }
};