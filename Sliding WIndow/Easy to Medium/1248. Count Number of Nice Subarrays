
class Solution {
public:
    int findsum(vector<int> &nums,int goal){
        if(goal<0) return 0;
        int n=nums.size();
        int l=0,r=0;
        int sum=0,cnt=0;
        while(r<n){
            sum+=nums[r]%2;
            while(l<n && sum>goal){
                sum-=nums[l]%2;
                l++;
            }
            cnt+=r-l+1;
            r++;
        }
        return cnt;
    }
    int numberOfSubarrays(vector<int>& nums, int goal) {
        int n=nums.size();

        
        return findsum(nums,goal)-findsum(nums,goal-1);
    }
};